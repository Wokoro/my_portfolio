<!-- Header navigation bar -->
<nav class="navbar navbar-expand-lg navbar-light header_section">
    <a class="navbar-brand" href="#">
        <img src="/images/logo.png" width="60" height="60" alt="logo">
    </a>
    <!-- Responsive menu icon -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Navigation links -->
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item px-2" data-active="home">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item px-2" data-active="about">
                <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item px-2" data-active="projects">
                <a class="nav-link" href="/projects">Projects</a>
            </li>
            <li class="nav-item px-2" data-active="services">
                <a class="nav-link" href="/services">Services</a>
            </li>
            <li class="nav-item px-2" data-active="contact">
                <a class="nav-link" href="/contact">Contact</a>
            </li>
            <li class="nav-item px-2 d-flex align-items-center" data-active="auth">
                <%if(locals.username){ %>
                    <div class="">
                        <a href="#" style="margin: 0 2em;">
                            <%= username %>
                        </a>
                        <a href="#" class="btn btn-danger">Logout</a>
                    </div>
                    <%} else { %>
                        <a href="/login" class="btn btn-light">Login</a>
                        <% } %>
            </li>
        </ul>
</nav>

<!-- Script for formatting active navigation link -->
<script>
    let active = '<%= active %>';
    let activeLink = document.querySelector(`[data-active=${active}]`);

    let navLinks = document.querySelectorAll(`[data-active]`);
    navLinks.forEach(elem => elem.classList.remove('active'));

    activeLink.classList.add('active');
</script>